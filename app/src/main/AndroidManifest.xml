<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="false"
        android:icon="@drawable/chainlynx_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChainLynxScoutingApp"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".ScannedBarcodeActivity"
            android:exported="false" />
        <activity
            android:name=".MatchSetup"
            android:exported="false" />
        <activity
            android:name=".TeleopScouting"
            android:exported="false" />
        <activity
            android:name=".AutoScouting"
            android:exported="false" />
        <activity
            android:name=".QrCodeDisplay"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>